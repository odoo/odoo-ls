{
  "name": "odoo",
  "displayName": "Odoo",
  "description": "Language Server for Odoo projects",
  "version": "0.2.8",
  "publisher": "Odoo",
  "repository": {
    "type": "git",
    "url": "https://github.com/odoo/odoo-ls"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Snippets",
    "Linters"
  ],
  "icon": "images/odoo_logo.png",
  "activationEvents": [
    "onView:explorer",
    "workspaceContains:**/__manifest__.py"
  ],
  "contributes": {
    "commands": [
      {
        "command": "odoo.clickStatusBar",
        "title": "Change Configuration",
        "category": "Odoo"
      },
      {
        "command": "odoo.openWelcomeView",
        "title": "Open the Welcome page",
        "category": "Odoo"
      },
      {
        "command": "odoo.openChangelogView",
        "title": "Open the Changelog page",
        "category": "Odoo"
      },
      {
        "command": "odoo.clearState",
        "title": "Wipe the extension's state storage (!!!THIS ACTION IS IRREVERSIBLE!!!)",
        "category": "Odoo"
      },
      {
        "command": "odoo.testCrashMessage",
        "title": "Open the crash notification",
        "category": "Odoo"
      },
      {
        "command": "odoo.disablePythonLanguageServerCommand",
        "title": "Set Python extension LanugageServer to None (Does nothing if python extension is not active)",
        "category": "Odoo"
      }
    ],
    "views": {},
    "menus": {
      "commandPalette": [
        {
          "command": "odoo.testCrashMessage",
          "title": "Open the crash notification",
          "category": "Odoo",
          "when": "odoo.showCrashNotificationCommand"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Odoo",
      "properties": {
        "Odoo.autoRefresh": {
          "scope": "window",
          "type": "string",
          "default": "adaptive",
          "enum": [
            "onSave",
            "afterDelay",
            "adaptive",
            "off"
          ],
          "enumDescriptions": [
            "Refreshes the server data when the user saves a file",
            "Refreshes the server data after a delay (",
            "Refreshed the server immediatly if it will be fast, otherwises during inactivity (based on autoRefreshDelay)",
            "Disables the auto-refresh feature"
          ],
          "description": "Define when the server has to refresh its data according to the new updates"
        },
        "Odoo.autoRefreshDelay": {
          "scope": "window",
          "type": "number",
          "default": 1000,
          "maximum": 15000,
          "markdownDescription": "Define the delay the server has to wait before refreshing data after an update."
        },
        "Odoo.autocompletion.filterModelNames": {
          "scope": "window",
          "type": "boolean",
          "default": true,
          "markdownDescription": "Only show model names from module dependencies"
        },
        "Odoo.disablePythonLanguageServer": {
          "scope": "window",
          "type": "boolean",
          "default": true,
          "markdownDescription": "Set LanugageServer setting on Python extension to None on workspace level after user input (Does nothing if python extension is not active or already set to `None`)"
        },
        "Odoo.diagMissingImportLevel": {
          "scope": "window",
          "type": "string",
          "default": "all",
          "enum": [
            "all",
            "only_odoo",
            "none"
          ],
          "enumDescriptions": [
            "All missing imports will be reported",
            "Only missing imports from Odoo will be reported, not from external packages",
            "No missing imports will be reported"
          ],
          "description": "Define for which missing import a diagnostic should be raised"
        },
        "Odoo.serverLogLevel": {
          "scope": "window",
          "type": "string",
          "enum": [
            "trace",
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "description": "Filter logs saved to file by the server. Does not impact log displayed in the output window"
        },
        "odooServer.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "Odoo.configurations": {
          "scope": "application",
          "type": "object",
          "default": {
            "0": {}
          },
          "description": "The list containing all the configurations, edit at your own risks",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer",
                  "default": 0,
                  "description": "Unique identifier for the configuration"
                },
                "name": {
                  "type": "string",
                  "default": "",
                  "description": "Name of the configuration"
                },
                "rawOdooPath": {
                  "type": "string",
                  "default": "",
                  "description": "path where odoo community is installed, you can use ${workspaceFolder} and ${userHome}"
                },
                "odooPath": {
                  "type": "string",
                  "default": "",
                  "description": "Internal use: modify at your own risk"
                },
                "pythonPath": {
                  "type": "string",
                  "default": "python3",
                  "description": "the python that will be used if you don't have the python extension"
                },
                "addons": {
                  "type": "array",
                  "default": [],
                  "description": "paths of addons",
                  "items": {
                    "type": "string",
                    "default": ""
                  }
                },
                "validatedAddonsPaths": {
                  "type": "array",
                  "default": [],
                  "description": "Internal use: modify at your own risk",
                  "items": {
                    "type": "string",
                    "default": ""
                  }
                }
              }
            }
          }
        },
        "Odoo.selectedConfiguration": {
          "scope": "window",
          "type": "string",
          "default": "0",
          "description": "Configuration active in this workspace"
        }
      }
    }
  },
  "main": "./client/out/main.js",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./client/extension.ts --bundle --outfile=client/out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "vscode:uninstall": "node ./client/common/cleanup.mjs"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.2",
    "@types/markdown-it": "^13.0.1",
    "@types/node": "^16.11.6",
    "@types/semver": "^7.5.2",
    "@types/vscode": "^1.78.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.2.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@bendera/vscode-webview-elements": "^0.14.0",
    "@vscode/codicons": "^0.0.33",
    "@vscode/python-extension": "^1.0.5",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "axios": "^1.4.0",
    "ejs": "^3.1.9",
    "markdown-it": "^13.0.1",
    "semver": "^7.5.4",
    "untildify": "^5.0.0",
    "vscode-languageclient": "^8.1.0"
  }
}
