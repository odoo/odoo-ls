{
  "name": "odoo",
  "displayName": "Odoo",
  "description": "",
  "version": "0.1.0",
  "publisher": "Odoo",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Snippets",
    "Linters"
  ],
  "activationEvents": [
    "onView:explorer",
    "onView:odoo-explorer",
    "workspaceContains:**/__manifest__.py"
  ],
  "contributes": {
    "commands": [
      {
        "command": "odoo.addConfiguration",
        "title": "New configuration"
      },
      {
        "command": "odoo.openConfiguration",
        "title": "Open configuration"
      },
      {
        "command": "odoo.clickStatusBar",
        "title": "Status Bar Click"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "odoo-explorer",
          "title": "Odoo",
          "icon": "images/logo.png"
        }
      ]
    },
    "views": {
      "odoo-explorer": [
        {
          "id": "odoo-configurations",
          "name": "configurations",
          "contextualTitle": "Configurations"
        },
        {
          "id": "odoo-databases",
          "name": "databases",
          "contextualTitle": "Databases"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "odoo.addConfiguration",
          "when": "view == odoo-configurations",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "odoo.addConfiguration",
          "when": "view == nodeDependencies && viewItem == dependency",
          "group": "inline"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "odoo-configurations",
        "contents": "Create a configuration to start using Odoo extension.\n[New Configuration](command:odoo.addConfiguration)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Odoo",
      "properties": {
        "Odoo.userDefinedConfigurations": {
          "scope": "resource",
          "type": "object",
          "default": {},
          "description": "User-defined configuration. Please don't edit it manually"
        },
        "Odoo.selectedConfigurations": {
          "scope": "resource",
          "type": "integer",
          "default": -1,
          "description": "User-defined configuration. Please don't edit it manually"
        },
        "Odoo.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.62.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.2.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@vscode/vsce": "^2.18.0",
    "@vscode/webview-ui-toolkit": "^1.0.0",
    "vsce": "^2.15.0",
    "vscode-languageclient": "^7.0.0"
  }
}
