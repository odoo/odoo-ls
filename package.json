{
  "name": "odoo",
  "displayName": "Odoo",
  "description": "",
  "version": "0.1.0-alpha.1",
  "publisher": "Odoo",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Snippets",
    "Linters"
  ],
  "activationEvents": [
    "onView:explorer",
    "workspaceContains:**/__manifest__.py"
  ],
  "contributes": {
    "commands": [
      {
        "command": "odoo.addConfiguration",
        "title": "Add Configuration",
        "category": "Odoo",
        "icon": "$(add)"
      },
      {
        "command": "odoo.openConfiguration",
        "title": "Open configuration",
        "category": "Odoo"
      },
      {
        "command": "odoo.clickStatusBar",
        "title": "Change Configuration",
        "category": "Odoo"
      },
      {
        "command": "odoo.openWelcomeView",
        "title": "Open the Welcome page",
        "category": "Odoo"
      },
      {
        "command": "odoo.testCrashMessage",
        "title": "Open the crash notification",
        "category": "Odoo"
      },
      {
        "command": "odoo.clearState",
        "title": "Wipe the extension's state storage (!!!THIS ACTION IS IRREVERSIBLE!!!)",
        "category": "Odoo"
      }
    ],
    "views": {},
    "menus": {
      "view/title": [
        {
          "command": "odoo.addConfiguration",
          "when": "view == odoo-configurations",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "odoo.addConfiguration",
          "when": "view == nodeDependencies && viewItem == dependency",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Odoo",
      "properties": {
        "Odoo.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        },
        "Odoo.pythonPath": {
          "scope": "window",
          "type": "string",
          "default": null,
          "description": "Path to the Python binary the Language Server will run on."
        }
      }
    }
  },
  "main": "./client/out/main.js",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./client/extension.ts --bundle --outfile=client/out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.2",
    "@types/node": "^16.11.6",
    "@types/vscode": "^1.78.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.2.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@bendera/vscode-webview-elements": "^0.14.0",
    "@vscode/codicons": "^0.0.33",
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "axios": "^1.4.0",
    "ejs": "^3.1.9",
    "vscode-languageclient": "^8.1.0"
  }
}
